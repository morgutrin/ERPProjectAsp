                @Html.EnumDropDownListFor(model => model.InventoryGroup, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.InventoryGroup, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
